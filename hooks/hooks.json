{
  "hooks": {
    "SessionStart": [{
      "matcher": "startup|resume",
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/aloud-code.sh session-start",
        "timeout": 10,
        "async": true
      }]
    }],
    "UserPromptSubmit": [
      {
        "hooks": [{
          "type": "command",
          "command": "${CLAUDE_PLUGIN_ROOT}/hooks/aloud-code.sh toggle",
          "timeout": 5,
          "async": false
        }]
      },
      {
        "hooks": [{
          "type": "command",
          "command": "${CLAUDE_PLUGIN_ROOT}/hooks/aloud-code.sh user-prompt",
          "timeout": 30,
          "async": true
        }]
      }
    ],
    "Stop": [{
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/aloud-code.sh stop",
        "timeout": 30,
        "async": true
      }]
    }],
    "SessionEnd": [{
      "hooks": [{
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/aloud-code.sh session-end",
        "timeout": 10,
        "async": true
      }]
    }]
  }
}
